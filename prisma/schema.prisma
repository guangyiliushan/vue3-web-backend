generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    salt      String
    username  String?  @default(cuid())
    createdAt DateTime @default(now())
}

model Post {
    id         String   @id @default(uuid())
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    title      String
    content    String?
    timeToRead Int      @default(0)
    viewCount  Int      @default(0)
    timeCount  Int      @default(0)
}
